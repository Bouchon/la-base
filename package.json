{
  "name": "la-base",
  "version": "1.0.0",
  "description": "La base",
  "main": "index.js",
  "author": "Florian Knoblauch",
  "license": "ISC",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js --progress",
    "deploy": "surge --project public",
    "doc": "rimraf doc && groc",
    "lint": "eslint .",
    "start": "node tools/dev-server.js",
    "start:d": "webpack-dashboard -- npm start",
    "test": "jest",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "> 1%",
              "safari >= 10"
            ],
            "node": "current"
          }
        }
      ],
      "react",
      "stage-3"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "transform-class-properties",
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "dependencies": {
    "autobind-decorator": "^2.1.0",
    "localforage": "^1.5.0",
    "lodash.range": "^3.2.0",
    "material-ui": "^1.0.0-beta.7",
    "material-ui-icons": "^1.0.0-alpha.19",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-infinite-calendar": "^2.3.1",
    "react-motion": "^0.5.1",
    "react-redux": "^5.0.5",
    "react-redux-oauth2": "^0.5.6",
    "react-router-dom": "^4.1.2",
    "react-tap-event-plugin": "^2.0.1",
    "reduce-reducers": "^0.1.2",
    "redux": "^3.7.2",
    "redux-offline": "^2.0.0"
  },
  "devDependencies": {
    "autoprefix": "^1.0.1",
    "autoprefixer": "^7.1.3",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "body-parser": "^1.17.2",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.7",
    "express": "^4.15.3",
    "morgan": "^1.8.2",
    "offline-plugin": "^4.8.3",
    "postcss-loader": "^2.0.6",
    "react-hot-loader": "^3.0.0-beta.7",
    "style-loader": "^0.18.2",
    "webpack": "^3.4.1",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2"
  }
}
